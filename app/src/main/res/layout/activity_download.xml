<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp"
  android:background="@color/backgroundLight">

  <!-- Ввод URL + буффер -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <EditText
      android:id="@+id/urlInput"
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="@string/url_hint"
      android:inputType="textUri" />

    <Button
      android:id="@+id/pasteButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/paste_button"
      android:background="@drawable/button_selector" />
  </LinearLayout>

  <!-- Блок кнопок -->
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:gravity="center_horizontal">

    <!-- Кнопка + шестерёнка -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/videoButton"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/video_button" />

      <Button
        android:id="@+id/videoGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gear_button" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/audioButton"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/audio_button" />

      <Button
        android:id="@+id/audioGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gear_button" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/videoPlaylistButton"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/video_playlist_button" />

      <Button
        android:id="@+id/videoPlaylistGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gear_button" />
    </LinearLayout>

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <Button
        android:id="@+id/audioPlaylistButton"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/audio_playlist_button" />

      <Button
        android:id="@+id/audioPlaylistGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gear_button" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>

