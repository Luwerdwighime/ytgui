<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?android:windowBackground"
  android:padding="8dp"
  android:fillViewport="true">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Ввод URL + Вставка -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="4dp"
      android:background="@color/backgroundDark">

      <EditText
        android:id="@+id/urlInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/url_hint"
        android:inputType="textUri"
        android:padding="6dp"
        android:textColor="@color/textSecondary"
        android:background="@android:color/transparent" />

      <Button
        android:id="@+id/pasteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paste_button"
        android:backgroundTint="?attr/colorAccent"
        android:onClick="onPasteClicked" />
    </LinearLayout>

    <!-- Кнопки загрузки -->
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="12dp"
      android:gravity="center_horizontal">

      <!-- Видео -->
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <Button
          android:id="@+id/videoButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="@string/video_button"
          android:backgroundTint="?attr/colorPrimary" />

        <Button
          android:id="@+id/videoGear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/gear_button"
          android:layout_marginStart="8dp" />
      </LinearLayout>

      <!-- Аудио -->
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <Button
          android:id="@+id/audioButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="@string/audio_button"
          android:backgroundTint="?attr/colorPrimary" />

        <Button
          android:id="@+id/audioGear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/gear_button"
          android:layout_marginStart="8dp" />
      </LinearLayout>

      <!-- Видеоплейлист -->
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <Button
          android:id="@+id/videoPlaylistButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="@string/video_playlist_button"
          android:backgroundTint="?attr/colorPrimary" />

        <Button
          android:id="@+id/videoPlaylistGear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/gear_button"
          android:layout_marginStart="8dp" />
      </LinearLayout>

      <!-- Аудиоплейлист -->
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <Button
          android:id="@+id/audioPlaylistButton"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text="@string/audio_playlist_button"
          android:backgroundTint="?attr/colorPrimary" />

        <Button
          android:id="@+id/audioPlaylistGear"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/gear_button"
          android:layout_marginStart="8dp" />
      </LinearLayout>

    </LinearLayout>
  </LinearLayout>
</ScrollView>

