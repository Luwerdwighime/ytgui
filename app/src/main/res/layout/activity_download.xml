<!-- res/layout/activity_download.xml -->
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="8dp">

  <EditText
    android:id="@+id/urlInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/enter_url"/>

  <Button
    android:id="@+id/pasteButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/paste"/>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button android:id="@+id/buttonVideo" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="@string/download_video"/>
      <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="⚙️"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button android:id="@+id/buttonAudio" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="@string/download_audio"/>
      <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="⚙️"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button android:id="@+id/buttonPlaylistVideo" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="@string/download_video_playlist"/>
      <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="⚙️"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button android:id="@+id/buttonPlaylistAudio" android:layout_weight="1"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:text="@string/download_audio_playlist"/>
      <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="⚙️"/>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>

