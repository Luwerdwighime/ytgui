<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true"
  android:padding="8dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Поле ввода URL -->
    <EditText
      android:id="@+id/urlInput"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Введите URL"
      android:inputType="textUri"
      android:textSize="14sp"/>

    <!-- Кнопка вставки -->
    <Button
      android:id="@+id/pasteBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="📋"
      android:layout_marginBottom="16dp"/>

    <!-- Кнопки действия -->
    <!-- Скачать видео -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp">

      <Button
        android:id="@+id/btnVideo"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Скачать видео"/>

      <Button
        android:id="@+id/gearVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙"/>
    </LinearLayout>

    <!-- Скачать аудио -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp">

      <Button
        android:id="@+id/btnAudio"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Скачать аудио"/>

      <Button
        android:id="@+id/gearAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙"/>
    </LinearLayout>

    <!-- Скачать видеоплейлист -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp">

      <Button
        android:id="@+id/btnVideoPlaylist"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Скачать видеоплейлист"/>

      <Button
        android:id="@+id/gearVideoPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙"/>
    </LinearLayout>

    <!-- Скачать аудиоплейлист -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp">

      <Button
        android:id="@+id/btnAudioPlaylist"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Скачать аудиоплейлист"/>

      <Button
        android:id="@+id/gearAudioPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙"/>
    </LinearLayout>
  </LinearLayout>
</ScrollView>

